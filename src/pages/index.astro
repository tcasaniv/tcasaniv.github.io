---
import BaseLayout from "../layouts/BaseLayout.astro";
import { SITE_TITLE, SITE_DESCRIPTION, RESUME, SOCIAL_LINKS } from "../data/resume";

const { summary, experience, education, skills, projects } = RESUME;
---

<BaseLayout title={SITE_TITLE} description={SITE_DESCRIPTION}>
  <!-- Hero Section -->
  <header class="bg-[var(--bg-header)] text-[var(--text-header)] py-12 text-center">
    <div class="container-custom">
      <h1 class="text-4xl font-bold m-0">{SITE_TITLE}</h1>
      <p class="text-xl mt-2 mb-4 opacity-90">{SITE_DESCRIPTION}</p>
      
      <div class="flex justify-center gap-4 text-sm mb-6">
        <a href={SOCIAL_LINKS.email} target="_blank" class="text-white hover:underline">Email</a>
        <span class="text-gray-400">|</span>
        <a href={SOCIAL_LINKS.linkedin} target="_blank" class="text-white hover:underline">LinkedIn</a>
        <span class="text-gray-400">|</span>
        <a href={SOCIAL_LINKS.github} target="_blank" class="text-white hover:underline">GitHub</a>
      </div>
      
      <a href="/CV_Terry_Casani.pdf" class="inline-block bg-[#555] text-white px-6 py-3 rounded hover:bg-[#ddd] hover:text-[#333] transition-colors duration-300 font-medium" download>
        Descargar CV
      </a>
    </div>
  </header>

  <div class="container-custom py-8">
    <div class="main-content">
      
      <!-- Summary -->
      <section id="about" class="mb-10">
        <h2 class="section-title text-2xl font-bold">Resumen</h2>
        <p class="text-[var(--text-main)] leading-relaxed">{summary}</p>
      </section>

      <!-- Projects -->
      <section id="projects" class="mb-10">
        <h2 class="section-title text-2xl font-bold">Proyectos Destacados</h2>
        <div class="space-y-6">
          {projects.map((project) => (
            <div class="mb-6">
              <h3 class="text-xl font-semibold mb-2">
                <a href={`/projects/${project.slug}`} class="text-[var(--text-main)] hover:underline">
                  {project.title}
                </a>
              </h3>
              <p class="mb-2 text-[var(--text-muted)]">{project.description}</p>
              <p class="text-sm"><strong>Tecnologías:</strong> {project.technologies}</p>
            </div>
          ))}
        </div>
        <div class="mt-4">
           <a href="/projects" class="text-link hover:underline font-medium">Ver todos los proyectos &rarr;</a>
        </div>
      </section>

      <!-- Experience -->
      <section id="experience" class="mb-10">
        <h2 class="section-title text-2xl font-bold">Experiencia</h2>
        <div class="space-y-8">
          {experience.map((job) => (
            <div class="job">
              <h3 class="text-xl font-semibold">{job.role}</h3>
              <p class="text-sm text-[var(--text-muted)] mb-3">{job.company} ({job.period})</p>
              <ul class="list-none p-0 space-y-2">
                {job.description.map((desc) => (
                  <li class="bg-[var(--bg-body)] p-3 rounded border-l-4 border-[var(--border-color)]">
                    {desc}
                  </li>
                ))}
              </ul>
            </div>
          ))}
        </div>
      </section>

      <!-- Education -->
      <section id="education" class="mb-10">
        <h2 class="section-title text-2xl font-bold">Educación</h2>
        <div class="space-y-6">
          {education.map((edu) => (
            <div>
              <h3 class="text-xl font-semibold">{edu.degree}</h3>
              <p class="text-[var(--text-muted)]">{edu.institution} ({edu.period})</p>
            </div>
          ))}
        </div>
      </section>

      <!-- Skills -->
      <section id="skills">
        <h2 class="section-title text-2xl font-bold">Habilidades</h2>
        <ul class="list-none p-0 space-y-2">
          {skills.map((skill) => (
            <li class="bg-[var(--bg-body)] p-3 rounded border-l-4 border-[var(--border-color)]">
              <strong>{skill.category}:</strong> {skill.items}
            </li>
          ))}
        </ul>
      </section>

    </div>
  </div>
</BaseLayout>