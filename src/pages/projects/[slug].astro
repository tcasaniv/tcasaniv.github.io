---
import BaseLayout from "../../layouts/BaseLayout.astro";
import { RESUME } from "../../data/resume";

export function getStaticPaths() {
  return RESUME.projects.map((project) => ({
    params: { slug: project.slug },
    props: { project },
  }));
}

const { project } = Astro.props;
---

<BaseLayout title={`${project.title} | Proyectos`} description={project.description}>
  <div class="container-custom py-8">
    <div class="main-content">
      <div class="mb-6">
        <a href="/projects" class="text-link flex items-center gap-2 mb-4 no-print">
          &larr; Volver a Proyectos
        </a>
        <h1 class="text-3xl font-bold mb-2">{project.title}</h1>
        <div class="text-[var(--text-muted)] text-sm mb-4">
          {project.date && <span>{project.date}</span>}
        </div>
      </div>

      {project.image && (
        <div class="mb-8 rounded-lg overflow-hidden border border-[var(--border-color)]">
          <img src={project.image} alt={project.title} class="w-full h-auto object-cover" />
        </div>
      )}

      <div class="prose max-w-none mb-8">
        <h2 class="text-xl font-semibold mb-3">Descripción</h2>
        <p class="leading-relaxed">{project.description}</p>
      </div>

      <div class="mb-8">
        <h2 class="text-xl font-semibold mb-3">Tecnologías</h2>
        <div class="flex flex-wrap gap-2">
          {project.technologies.split(',').map((tech) => (
            <span class="bg-[var(--bg-body)] px-3 py-1 rounded border border-[var(--border-color)] text-sm">
              {tech.trim()}
            </span>
          ))}
        </div>
      </div>

      {project.links && (
        <div>
          <h2 class="text-xl font-semibold mb-3">Enlaces</h2>
          <div class="flex gap-4">
            {project.links.github && (
              <a href={project.links.github} target="_blank" class="btn flex items-center gap-2">
                <svg viewBox="0 0 16 16" class="w-5 h-5" fill="currentColor"><path d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27.68 0 1.36.09 2 .27 1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.013 8.013 0 0016 8c0-4.42-3.58-8-8-8z"></path></svg>
                Ver en GitHub
              </a>
            )}
            {project.links.website && (
              <a href={project.links.website} target="_blank" class="btn flex items-center gap-2">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M12 21a9.004 9.004 0 008.716-6.747M12 21a9.004 9.004 0 01-8.716-6.747M12 21c2.485 0 4.5-4.03 4.5-9S12 3 12 3m0 18c-2.485 0-4.5-4.03-4.5-9S12 3 12 3m0 0a8.997 8.997 0 017.843 4.582M12 3a8.997 8.997 0 00-7.843 4.582m15.686 0A11.953 11.953 0 0112 10.5c-2.998 0-5.74-1.1-7.843-2.918m15.686 0A8.959 8.959 0 0121 12c0 .778-.099 1.533-.284 2.253m0 0A17.919 17.919 0 0112 16.5c-3.162 0-6.133-.815-8.716-2.247m0 0A9.015 9.015 0 013 12c0-1.605.42-3.113 1.157-4.418" />
                </svg>
                Visitar sitio web
              </a>
            )}
            {project.links.demo && (
              <a href={project.links.demo} target="_blank" class="btn flex items-center gap-2">
                 Demo
              </a>
            )}
          </div>
        </div>
      )}
    </div>
  </div>
</BaseLayout>
