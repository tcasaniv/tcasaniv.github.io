---
import BaseLayout from "../layouts/BaseLayout.astro";
import { RESUME } from "../data/resume";

const { projects } = RESUME;
---

<BaseLayout title="Proyectos | Terry Casani" description="Proyectos y trabajos realizados">
  <div class="container-custom py-8">
    <div class="main-content">
      <h1 class="section-title text-3xl font-bold mb-8">Proyectos</h1>
      
      <div class="grid gap-8 md:grid-cols-1">
        {projects.map((project) => (
          <article class="p-6 bg-[var(--bg-body)] rounded-lg border border-[var(--border-color)] hover:border-gray-400 dark:hover:border-gray-500 transition-colors">
            <h2 class="text-2xl font-bold mb-2">
              <a href={`/projects/${project.slug}`} class="text-link no-underline hover:underline">
                {project.title}
              </a>
            </h2>
            <p class="mb-4 text-[var(--text-muted)]">{project.description}</p>
            <div class="mt-4 flex flex-wrap gap-2 items-center">
               <span class="font-semibold text-sm">Tecnologías:</span>
               {project.technologies.split(',').map(tech => (
                  <span class="inline-block bg-[var(--bg-card)] px-2 py-1 rounded text-xs border border-[var(--border-color)]">
                    {tech.trim()}
                  </span>
               ))}
            </div>
            <div class="mt-4">
              <a href={`/projects/${project.slug}`} class="text-sm font-medium text-[var(--accent-color)] hover:text-[var(--text-main)] transition-colors">
                Ver detalles &rarr;
              </a>
            </div>
          </article>
        ))}
      </div>
      
      <div class="mt-8 text-center text-[var(--text-muted)]">
        <p>Más proyectos en mi <a href="https://github.com/tcasaniv" target="_blank" class="underline hover:text-[var(--text-main)]">GitHub</a>.</p>
      </div>
    </div>
  </div>
</BaseLayout>