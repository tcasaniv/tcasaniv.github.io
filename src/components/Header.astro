---
import HeaderLink from "./HeaderLink.astro";
import DarkModeToggle from "./DarkModeToggle.astro";
import { SITE_TITLE } from "../consts";
---

<header class="bg-[var(--bg-header)] text-[var(--text-header)] py-4 shadow-md sticky top-0 z-50">
  <div class="container-custom flex flex-wrap items-center justify-between">
    <a href="/" class="text-xl font-bold no-underline text-white hover:text-gray-300">
      {SITE_TITLE}
    </a>

    <nav class="flex items-center gap-4 mt-2 sm:mt-0">
      <HeaderLink href="/" class="text-white hover:underline">Inicio</HeaderLink>
      <HeaderLink href="/blog" class="text-white hover:underline">Blog</HeaderLink>
      <HeaderLink href="/projects" class="text-white hover:underline">Proyectos</HeaderLink>
      
      <div class="flex items-center gap-2 border-l pl-4 border-gray-600">
        <a href="/search" class="text-white hover:text-gray-300">
          <span class="sr-only">Buscar</span>
          <svg
            xmlns="http://www.w3.org/2000/svg"
            fill="none"
            viewBox="0 0 24 24"
            stroke-width="1.5"
            stroke="currentColor"
            class="h-5 w-5"
          >
            <title>Buscar</title>
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              d="M21 21l-5.197-5.197m0 0A7.5 7.5 0 105.196 5.196a7.5 7.5 0 0010.607 10.607z"
            ></path>
          </svg>
        </a>
        <a href="https://github.com/tcasaniv" target="_blank" class="text-white hover:text-gray-300">
          <span class="sr-only">GitHub</span>
          <svg viewBox="0 0 16 16" class="w-5 h-5" fill="currentColor" aria-hidden="true"><path d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27.68 0 1.36.09 2 .27 1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.013 8.013 0 0016 8c0-4.42-3.58-8-8-8z"></path></svg>
        </a>
        <DarkModeToggle />
      </div>
    </nav>
  </div>
</header>
